{
  "expo": {
    "name": "mobile-app",
    "slug": "mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "scanpay",
    "userInterfaceStyle": "automatic",
    "experiments": {
      "newArchEnabled": true
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
    "NSLocationWhenInUseUsageDescription": "We use your location to show nearby stores like Zudio, Westside and Pantaloons."
    }
  },
    "android": {
  "adaptiveIcon": {
    "backgroundColor": "#E6F4FE",
    "foregroundImage": "./assets/images/android-icon-foreground.png",
    "backgroundImage": "./assets/images/android-icon-background.png",
    "monochromeImage": "./assets/images/android-icon-monochrome.png"
  },
  "edgeToEdgeEnabled": true,
  "predictiveBackGestureEnabled": false,
  "permissions": [
    "INTERNET",
    "CAMERA",
    "RECORD_AUDIO",
    "LOCATION",
    "ACCESS_FINE_LOCATION"
  ],
  "package": "com.aditipatil21.mobileapp"
}
,
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ScanPayGo to access your photos to upload profile picture."
          
        }
      ],
      "expo-web-browser"
      
    ],
    "extra": {
      "eas": {
        "projectId": "55df0a93-a3d2-42bc-810f-82e428e3cb0d"
      }
    }
  }
  }
